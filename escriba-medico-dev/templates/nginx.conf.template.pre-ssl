# Nginx Configuration Template - Pre-SSL
# For Let's Encrypt ACME challenge
# This file will be placed in /etc/nginx/conf.d/default.conf

server {
    listen 80;
    server_name ${DOMAIN_NAME};

    location /.well-known/acme-challenge/ {
        root /var/www/certbot;
    }

    location / {
        # Temporary response to other requests during challenge
        return 404;
    }
}